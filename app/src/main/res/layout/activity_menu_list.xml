<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#32bea6"
    android:onClick="addLocationClicked"
    tools:context=".MenuListActivity">

    <ListView
        android:id="@+id/location_list"
        android:layout_width="411dp"
        android:layout_height="557dp"
        android:layout_marginBottom="1dp"
        android:choiceMode="singleChoice"
        android:listSelector="@drawable/list_view_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="89dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="88dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="@string/main_title"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/location_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/add_location_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/add_location_image_description"
        android:onClick="addLocationClicked"
        app:layout_constraintBottom_toTopOf="@+id/location_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/add_location_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>